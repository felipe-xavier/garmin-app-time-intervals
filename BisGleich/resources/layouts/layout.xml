<layout id="MainLayout">
    <bitmap 
        id="heart_rate_icon" 
        x="44%" 
        y="10%" 
        filename="../drawables/heart-rate.png"
    />
    <label
        id="heart_rate"
        text="90"
        x="57%"
        y="8%"
        font="Gfx.FONT_TINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="time_of_the_day"
        text="00:00"
        x="center"
        y="20%"
        font="Gfx.FONT_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="current_timer"
        text="0:30"
        x="center"
        y="center"
        font="Gfx.FONT_NUMBER_THAI_HOT"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="intervals_left"
        text="5 intervals left"
        x="center"
        y="67%"
        font="Gfx.FONT_SMALL"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="target_time"
        text="00:00:00"
        x="center"
        y="85%"
        font="Gfx.FONT_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="target_time_label"
        text="target"
        x="center"
        y="92%"
        font="Gfx.FONT_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    
</layout>
